nav
    background-color #fff
    // border-bottom 1px solid border-grey
    fixed top left
    background-color #f9f9f9
    padding 1rem 0
    width 100%
    z-index 1000
    a
        color text-disabled
        font-weight 400
        &:hover
            color color-heading

.content-intro
    width 70%
    padding 5rem 0
    small
        text-transform uppercase
        color color-primary
        font-size font-size-standard
        font-weight 500
        margin-bottom 1rem
        display block
    h2
        font-weight 400
        line-height 1.4em

.shots
    .date
        color text-disabled
        font-weight 400
    & + .shots
        margin-top 2rem

.color-col
    & + .color-col .color-block
        border-top 1px solid border-grey

.color-block
    padding 2.4rem 0
    display flex
    .avatar
        border-radius border-radius-normal
        margin-right 1.5rem
        absolute left top
    .description
        position relative
        padding-left 4.5rem
        h5
            line-height 1em
            margin-bottom .4rem
            font-weight 500
        a
            color text-default
            &:hover
                color color-primary
    .colors
        display flex
        margin-left auto
        &:hover
            .color + .color
                margin-left .1rem
    .color
        display inline-block
        will-change margin-left
        transition margin-left 140ms ease
        & + .color
            margin-left -.8rem
        p
            padding .5rem 0
            display none
        span
            content ' '
            width 3rem
            height 3rem
            display block
            margin 0 auto
            border-radius 50%
            border 3px solid #fff
            padding 0 .5rem

footer
    padding 2.6rem 0
    font-size font-size-small
    text-align center
    .muted
        margin-top .8rem
    .list
        margin-top 1.6rem
